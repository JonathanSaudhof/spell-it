{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext", "webworker"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": ["@serwist/next/typings"],
    "paths": {
      "@/*": ["./src/*"],
      "@/lib/*": ["./lib/*"]
    }
  },
  "include": [
    "apps/spell-it/next-env.d.ts",
    "apps/spell-it/src/**/*",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "./lib/**/*",
    "lib"
  ],
  "exclude": ["node_modules", "apps/spell-it/public/sw.js"]
}
